<DockPanel x:Class="TTS.CardTool.UI.View.Outputs"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:prism="http://prismlibrary.com/"
           prism:ViewModelLocator.AutoWireViewModel="True">

    <StackPanel Orientation="Horizontal" Margin="5" DockPanel.Dock="Top">
        <Button Content="Save" Width="80" Margin="0 0 5 0" Command="{Binding SaveCommand}"/>
        <Button Content="Copy" Width="80" Command="{Binding CopyCommand}"/>
    </StackPanel>

    <TextBox Margin="5 0 5 5" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
             Text="{Binding TTSData}"/>
</DockPanel>
